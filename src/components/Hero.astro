---
const hero = {
    title: `Jonathan GATARD`,
    subtitle: `Ingénieur-Maker & Explorateur du Quotidien`,
    description: `Je décortique, répare et améliore chaque engrenage de mon environnement, du plus petit capteur au moteur de voiture.`,
    cta1: `Découvrir mon parcours`,
    cta2: `Voir mes projets`,
};

const skills = [
    { name: `z/OS`, color: `text-blue-400` },
    { name: `TSO`, color: `text-blue-400` },
    { name: `USS`, color: `text-blue-400` },
    { name: `JCL`, color: `text-gray-300` },
    { name: `DB2`, color: `text-gray-300` },
    { name: `Zowe`, color: `text-purple-400` },
    { name: `Rexx`, color: `text-gray-300` },
    { name: `Python`, color: `text-yellow-300` },
    { name: `Linux`, color: `text-yellow-100` },
    { name: `Git`, color: `text-orange-400` },
    { name: `Ansible`, color: `text-red-400` },
    { name: `Docker`, color: `text-blue-300` },
    { name: `SQL`, color: `text-gray-300` },
    { name: `Grafana`, color: `text-green-400` },
    { name: `Agile`, color: `text-yellow-400` },
    { name: `DevOps`, color: `text-green-400` },
    { name: `Kanban`, color: `text-yellow-400` },
    { name: `Amélioration continue`, color: `text-gray-300` },
    { name: `ITIL 4`, color: `text-gray-300` },
    { name: `Anglais C1`, color: `text-indigo-300` },
];
---

<section class="relative h-screen flex flex-col items-center justify-center overflow-hidden bg-gray-900 text-white pt-20 md:pt-0">
  
  <!-- Dynamic Tech Background -->
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-[linear-gradient(to_right,#4f4f4f2e_1px,transparent_1px),linear-gradient(to_bottom,#4f4f4f2e_1px,transparent_1px)] bg-[size:4rem_4rem] [mask-image:radial-gradient(ellipse_60%_50%_at_50%_50%,#000_70%,transparent_100%)]"></div>
    <div class="absolute top-0 left-1/4 w-96 h-96 bg-blue-500/20 rounded-full mix-blend-screen filter blur-[100px] animate-pulse"></div>
    <div class="absolute bottom-0 right-1/4 w-96 h-96 bg-purple-500/20 rounded-full mix-blend-screen filter blur-[100px] animate-pulse delay-1000"></div>
  </div>

  <div class="relative z-10 text-center px-4 max-w-7xl mx-auto">
    
    <h2 class="text-3xl md:text-7xl font-extrabold bg-clip-text text-transparent bg-gradient-to-r from-blue-400 via-purple-400 to-cyan-400 mb-6 md:mb-10 pb-2 flex flex-col items-center gap-2">
      <span>Ingénieur-Maker</span>
      <span class="text-2xl md:text-4xl text-gray-500 opacity-50">&</span>
      <span>Explorateur du Quotidien</span>
    </h2>
    
    <p class="text-lg md:text-2xl text-gray-300 mb-8 md:mb-12 leading-relaxed max-w-5xl mx-auto bg-gray-900/50 backdrop-blur-sm p-4 md:p-8 rounded-xl border border-gray-800 shadow-2xl">
      {hero.description}
    </p>

    <div class="flex flex-col sm:flex-row gap-4 md:gap-5 justify-center items-center relative z-20">
      <a href="/experience" class="px-8 py-4 bg-blue-600 hover:bg-blue-700 text-white rounded-full font-bold transition-all duration-300 transform hover:-translate-y-1 shadow-lg shadow-blue-500/25 flex items-center justify-center gap-2 group">
        <span>{hero.cta1}</span>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 group-hover:translate-x-1 transition-transform" viewBox="0 0 20 20" fill="currentColor">
          <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
        </svg>
      </a>
      <a href="/passions" class="px-8 py-4 bg-gray-800/80 hover:bg-gray-700/80 text-white border border-gray-600 rounded-full font-bold transition-all duration-300 transform hover:-translate-y-1 backdrop-blur-sm flex items-center justify-center gap-2">
        <span>{hero.cta2}</span>
      </a>
    </div>
  </div>

  <!-- Scrolling Skills Ticker -->
  <div class="absolute bottom-0 left-0 w-full bg-black/40 backdrop-blur-sm border-t border-white/5 py-3 overflow-hidden z-20">
    <div class="ticker-wrap flex items-center">
      <div class="ticker-content flex items-center gap-12 whitespace-nowrap animate-infinite-scroll pl-4">
        <!-- Duplicate content for seamless loop -->
        {[...Array(2)].map(() => (
          <>
            {skills.map(skill => (
              <>
                <span class={`font-bold text-xl ${skill.color}`}>{skill.name}</span>
                <span class="text-gray-600 text-xs">●</span>
              </>
            ))}
          </>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  @keyframes infinite-scroll {
    from { transform: translateX(0); }
    to { transform: translateX(-50%); }
  }
  .animate-infinite-scroll {
    animation: infinite-scroll 40s linear infinite;
  }
  .ticker-wrap {
    mask-image: linear-gradient(to right, transparent, black 10%, black 90%, transparent);
  }
</style>
