---
const { title, description, hideFooter = false } = Astro.props;
import Navbar from '../components/Navbar.astro';
import Lightbox from '../components/Lightbox.astro';
---

<html lang="fr" class="scroll-smooth scroll-pt-24">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="alternate icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} | Jonathan GATARD</title>
        <meta name="description" content={description || "CV de Jonathan GATARD, Ingénieur Système Mainframe & Modernisation."}>
        
        <!-- JSON-LD Structured Data -->
        <script type="application/ld+json">
            {
              "@context": "https://schema.org",
              "@type": "Person",
              "name": "Jonathan GATARD",
              "jobTitle": "Ingénieur Mainframe & Interopérabilité",
              "url": "https://jonathan-gatard.fr",
              "sameAs": [
                "https://www.linkedin.com/in/jonathan-gatard/",
                "https://github.com/jonathan-gtd"
              ],
              "worksFor": {
                "@type": "Organization",
                "name": "Solutec"
              },
              "alumniOf": [
                {
                  "@type": "CollegeOrUniversity",
                  "name": "ISAE-Supaero"
                },
                {
                  "@type": "CollegeOrUniversity",
                  "name": "ISAE-ENSMA"
                },
                 {
                  "@type": "CollegeOrUniversity",
                  "name": "CNAM Poitiers"
                }
              ]
            }
        </script>
	</head>
	<body class="bg-gray-900 text-white font-sans antialiased min-h-screen flex flex-col relative">
        <Navbar />
		<main class="flex-grow">
            <slot />
		</main>
        
        {!hideFooter && (
        <footer class="bg-gray-950 py-8 text-center text-gray-500 text-sm mt-auto border-t border-gray-800">
             <div class="flex justify-center gap-6 mb-4">
                <a href="https://github.com/jonathan-gtd" target="_blank" class="hover:text-white transition-colors">GitHub</a>
                <a href="https://www.linkedin.com/in/jonathan-gatard/" target="_blank" class="hover:text-white transition-colors">LinkedIn</a>
            </div>
            <p>&copy; {new Date().getFullYear()} Jonathan GATARD</p>
        </footer>
        )}

        <!-- Back to Top Button -->
        <button id="backToTop" class="fixed bottom-8 right-8 p-3 bg-blue-600 hover:bg-blue-700 text-white rounded-full shadow-lg opacity-0 invisible transition-all duration-300 transform hover:-translate-y-1 z-50">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 10l7-7m0 0l7 7m-7-7v18" />
            </svg>
        </button>

        <script>
            const backToTopButton = document.getElementById('backToTop');
            
            window.addEventListener('scroll', () => {
                if (window.scrollY > 500) {
                    backToTopButton.classList.remove('opacity-0', 'invisible');
                } else {
                    backToTopButton.classList.add('opacity-0', 'invisible');
                }
            });

            backToTopButton.addEventListener('click', () => {
                window.scrollTo({ top: 0, behavior: 'smooth' });
            });
        </script>

        <Lightbox />

        <style is:global>
          @keyframes target-highlight {
            0% {
              box-shadow: 0 0 0 4px rgba(59, 130, 246, 0.5);
              background-color: rgba(59, 130, 246, 0.1);
            }
            100% {
              box-shadow: 0 0 0 0px rgba(59, 130, 246, 0);
              background-color: transparent;
            }
          }

          :target {
            animation: target-highlight 2s ease-out;
            border-radius: 1rem;
          }
        </style>
	</body>
</html>
