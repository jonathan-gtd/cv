    printer: '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17 17h2a2 2 0 002-2v-4a2 2 0 00-2-2H5a2 2 0 00-2 2v4a2 2 0 002 2h2m2 4h6a2 2 0 002-2v-4a2 2 0 00-2-2H9a2 2 0 00-2 2v4a2 2 0 002 2zm8-12V5a2 2 0 00-2-2H9a2 2 0 00-2 2v4h10z" /></svg>',
    leaf: '<svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M5 3v4M3 5h4M6 17v4m-2-2h4m5-16l2.286 6.857L21 12l-5.714 2.143L13 21l-2.286-6.857L5 12l5.714-2.143L13 3z" /></svg>',
};
---

<html lang="fr">
<head>
    <meta charset="utf-8" />
    <title>CV ‚Äî {personalInfo.name}</title>
    <meta name="viewport" content="width=device-width" />
    <style>
        @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap');
        
        /* Base Reset */
        * { margin: 0; padding: 0; box-sizing: border-box; }
        
        /* Print Configuration */
        @page {
            size: A4;
            margin: 0;
        }
        @media print {
            html, body { 
                width: 210mm;
                height: 297mm;
                -webkit-print-color-adjust: exact; 
                print-color-adjust: exact;
            }
            .no-print { display: none !important; }
            .page { box-shadow: none !important; margin: 0 !important; }
            body { background: white; }
        }

        /* Screen Styles */
        body {
            font-family: 'Inter', system-ui, sans-serif;
            background: #f3f4f6;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 2rem 0;
            color: #1f2937;
        }

        .page {
            width: 210mm;
            height: 297mm;
            background: white;
            display: flex;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0,0,0,0.1);
            position: relative;
        }

        /* ‚îÄ‚îÄ Left Sidebar (Dark Mode) ‚îÄ‚îÄ */
        .sidebar {
            width: 70mm;
            background: #111827;
            color: #f3f4f6;
            padding: 6mm 5mm;
            display: flex;
            flex-direction: column;
            justify-content: space-between;
            flex-shrink: 0;
        }

        .sidebar-section {
            /* no extra margin ‚Äî spacing is handled by sidebar gap */
        }
        
        /* Printing Optimization: Option to print sidebar in light mode could be added via CSS classes if needed, 
           but currently keeping the dark design as requested for "Premium" look, assuring it prints well. */
        
        .photo-wrapper {
            display: flex;
            justify-content: center;
            margin-bottom: 2mm;
        }
        .photo {
            width: 32mm;
            height: 32mm;
            border-radius: 50%;
            border: 3px solid #3b82f6;
            object-fit: cover;
            box-shadow: 0 0 0 4px rgba(59,130,246,0.2);
        }

        .sidebar-header {
            text-align: center;
            margin-bottom: 2mm;
        }
        .sidebar-name {
            font-size: 16pt;
            font-weight: 800;
            letter-spacing: -0.5px;
            line-height: 1.2;
            margin-bottom: 1mm;
        }
        .sidebar-title {
            font-size: 8.5pt;
            color: #60a5fa;
            font-weight: 600;
            line-height: 1.3;
        }
        
        .section-title {
            font-size: 8pt;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1.2px;
            color: #9ca3af;
            border-bottom: 1px solid #374151;
            padding-bottom: 1.5mm;
            margin-bottom: 2.5mm;
        }

        /* Contact List */
        .contact-list {
            list-style: none;
            font-size: 8pt;
            color: #d1d5db;
        }
        .contact-list li {
            display: flex;
            align-items: center;
            gap: 2.5mm;
            margin-bottom: 2.5mm;
        }
        .contact-icon {
            width: 5mm;
            height: 5mm;
            display: flex;
            align-items: center;
            justify-content: center;
            background: #1f2937;
            border-radius: 50%;
            color: #60a5fa;
        }
        .contact-icon svg { width: 12px; height: 12px; }
        .contact-text { flex: 1; word-break: break-word; }
        a.contact-text { color: #d1d5db; text-decoration: none; }
        a.contact-text:hover { text-decoration: underline; color: #60a5fa; }

        /* Skills */
        .skill-group { margin-bottom: 4mm; }
        .skill-group:last-child { margin-bottom: 0; }
        .skill-group h3 {
            font-size: 8.5pt;
            font-weight: 700;
            color: #e5e7eb;
            margin-bottom: 1.5mm;
        }
        .skill-tags {
            display: flex;
            flex-wrap: wrap;
            gap: 1.5mm;
        }
        .skill-tag {
            font-size: 7pt;
            padding: 0.8mm 2.5mm;
            background: #1f2937;
            border: 1px solid #374151;
            border-radius: 3px;
            color: #d1d5db;
            font-weight: 500;
        }

        /* Languages */
        .lang-row {
            display: flex;
            align-items: center;
            justify-content: space-between;
            font-size: 8pt;
            color: #d1d5db;
            margin-bottom: 2mm;
        }
        .lang-bar-bg {
            width: 22mm;
            height: 1.5mm;
            background: #374151;
            border-radius: 1mm;
            overflow: hidden;
        }
        .lang-bar-fill {
            height: 100%;
            border-radius: 1mm;
            background: #3b82f6;
        }

        /* ‚îÄ‚îÄ Right Main Content ‚îÄ‚îÄ */
        .main {
            flex: 1;
            padding: 8mm 8mm 6mm 8mm;
            display: flex;
            flex-direction: column;
            gap: 4mm;
        }

        /* Summary Box */
        .summary-box {
            background: #eff6ff;
            border-left: 3px solid #3b82f6;
            padding: 3mm 4mm;
            font-size: 8.5pt;
            font-style: italic;
            color: #1e3a8a;
            line-height: 1.4;
            border-radius: 0 4px 4px 0;
            margin-bottom: 2mm;
        }

        /* Main Headers */
        .main-section-title {
            font-size: 11pt;
            font-weight: 800;
            text-transform: uppercase;
            letter-spacing: 0.5px;
            color: #111827;
            border-bottom: 2px solid #e5e7eb;
            padding-bottom: 1.5mm;
            margin-bottom: 3mm;
            display: flex;
            align-items: center;
            gap: 2mm;
        }
        .main-section-title svg {
            color: #3b82f6;
            width: 16px;
            height: 16px;
        }

        /* Experience Cards */
        .exp-card { margin-bottom: 3.5mm; }
        .exp-header {
            display: flex;
            justify-content: space-between;
            align-items: baseline;
            margin-bottom: 1mm;
        }
        .exp-role {
            font-size: 10.5pt;
            font-weight: 700;
            color: #111827;
        }
        .exp-company {
            font-size: 9pt;
            color: #2563eb;
            font-weight: 600;
            margin-bottom: 1.5mm;
        }
        .date-badge {
            font-size: 7pt;
            font-weight: 600;
            color: #4b5563;
            background: #f3f4f6;
            padding: 0.5mm 2mm;
            border-radius: 3px;
            border: 1px solid #e5e7eb;
            white-space: nowrap;
        }
        .exp-details {
            list-style: none;
            font-size: 8.5pt;
            color: #374151;
            line-height: 1.45;
        }
        .exp-details li {
            padding-left: 3.5mm;
            position: relative;
            margin-bottom: 0.8mm;
            text-align: justify;
        }
        .exp-details li::before {
            content: '';
            position: absolute;
            left: 0;
            top: 1.8mm;
            width: 1.5mm;
            height: 1.5mm;
            background: #3b82f6;
            border-radius: 50%;
        }

        /* Education */
        .edu-grid {
            display: grid;
            gap: 3mm;
        }
        .edu-card {
            display: flex;
            flex-direction: column;
        }
        .edu-degree {
            font-size: 9.5pt;
            font-weight: 700;
            color: #111827;
        }
        .edu-school {
            font-size: 8.5pt;
            color: #2563eb;
            font-weight: 500;
        }
        .edu-details {
            font-size: 7.5pt;
            color: #6b7280;
            margin-top: 0.5mm;
            font-style: italic;
        }

        /* Interests */
        .interest-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 2mm 5mm;
        }
        .interest-item {
            display: flex;
            align-items: flex-start;
            gap: 2mm;
            font-size: 7.5pt;
            line-height: 1.3;
            color: #374151;
        }
        .interest-icon-box {
            width: 4.5mm;
            height: 4.5mm;
            display: flex;
            align-items: center;
            justify-content: center;
            flex-shrink: 0;
            color: #3b82f6;
        }
        .interest-icon-box svg {
            width: 14px;
            height: 14px;
        }
    </style>
</head>
<body>
    <!-- Print Controls -->
    <div class="no-print" style="position:fixed; top:1rem; right:1rem; display:flex; gap:0.5rem; z-index:100;">
        <button onclick="window.print()" style="background:#2563eb; color:white; border:none; padding:0.6rem 1.2rem; border-radius:0.5rem; font-weight:600; cursor:pointer; font-size:0.875rem; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);">
            üñ®Ô∏è Imprimer / PDF
        </button>
        <a href="/" style="background:#1f2937; color:white; border:none; padding:0.6rem 1.2rem; border-radius:0.5rem; font-weight:600; cursor:pointer; text-decoration:none; font-size:0.875rem; box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);">
            ‚¨ÖÔ∏è Retour
        </a>
    </div>

    <div class="page">
        <!-- ‚ïê‚ïê‚ïê LEFT SIDEBAR ‚ïê‚ïê‚ïê -->
        <aside class="sidebar">
            <div>
                <div class="photo-wrapper">
                    <img src={personalInfo.photo} alt={personalInfo.name} class="photo" />
                </div>
                <div class="sidebar-header">
                    <div class="sidebar-name">{personalInfo.name}</div>
                    <div class="sidebar-title">{personalInfo.title}</div>
                </div>

                <!-- Contact -->
                <div style="margin-top:3mm;">
                    <div class="section-title">Contact</div>
                    <ul class="contact-list">
                        <li>
                            <span class="contact-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
                            </span>
                            <span class="contact-text">{personalInfo.email}</span>
                        </li>
                        <li>
                            <span class="contact-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" /></svg>
                            </span>
                            <span class="contact-text">{personalInfo.phone}</span>
                        </li>
                        <li>
                            <span class="contact-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M21 12a9 9 0 01-9 9m9-9a9 9 0 00-9-9m9 9H3m9 9a9 9 0 01-9-9m9 9c1.657 0 3-4.03 3-9s-1.343-9-3-9m0 18c-1.657 0-3-4.03-3-9s1.343-9 3-9m-9 9a9 9 0 019-9" /></svg>
                            </span>
                            <a class="contact-text" href={`https://${personalInfo.website}`} target="_blank">{personalInfo.website}</a>
                        </li>
                        <li>
                            <span class="contact-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" /></svg>
                            </span>
                            <a class="contact-text" href={`https://${personalInfo.linkedin}`} target="_blank">{personalInfo.linkedin}</a>
                        </li>
                        <li>
                            <span class="contact-icon">
                                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path stroke-linecap="round" stroke-linejoin="round" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" /><path stroke-linecap="round" stroke-linejoin="round" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" /></svg>
                            </span>
                            <span class="contact-text">{personalInfo.misc}</span>
                        </li>
                    </ul>
                </div>
            </div>

            <!-- Skills -->
            <div class="sidebar-section">
                <div class="section-title">Comp√©tences</div>
                <div class="skill-group">
                    <h3>Mainframe</h3>
                    <div class="skill-tags">
                        {skills.mainframe.map(s => <span class="skill-tag">{s}</span>)}
                    </div>
                </div>
                <div class="skill-group">
                    <h3>Open & DevOps</h3>
                    <div class="skill-tags">
                        {skills.open.map(s => <span class="skill-tag">{s}</span>)}
                    </div>
                </div>
                <div class="skill-group">
                    <h3>M√©thodologie</h3>
                    <div class="skill-tags">
                        {skills.methodology.map(s => <span class="skill-tag">{s}</span>)}
                    </div>
                </div>
            </div>

            <!-- Certifications -->
            <div class="sidebar-section">
                <div class="section-title">Certifications</div>
                <div class="skill-tags">
                    {certifications.map(c => <span class="skill-tag">{c}</span>)}
                </div>
            </div>

            <!-- Soft Skills -->
            <div class="sidebar-section">
                <div class="section-title">Qualit√©s</div>
                <div class="skill-tags">
                    {softSkills.map(s => <span class="skill-tag">{s}</span>)}
                </div>
            </div>

            <!-- Languages -->
            <div>
                <div class="section-title">Langues</div>
                {languages.map(l => (
                    <div class="lang-row">
                        <span>{l.name}</span>
                        <div style="display:flex; align-items:center; gap:2mm;">
                            <span style="font-size:7pt; color:#9ca3af">{l.level}</span>
                            <div class="lang-bar-bg">
                                <div class="lang-bar-fill" style={`width:${l.pct}%`}></div>
                            </div>
                        </div>
                    </div>
                ))}
            </div>
        </aside>

        <!-- ‚ïê‚ïê‚ïê RIGHT MAIN CONTENT ‚ïê‚ïê‚ïê -->
        <main class="main">
            
            <!-- Summary -->
            <div class="summary-box">
                {summary}
            </div>

            <!-- Experience -->
            <section>
                <div class="main-section-title">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" /></svg>
                    Exp√©riences Professionnelles
                </div>
                
                {experiences.map(exp => (
                    <div class="exp-card">
                        <div class="exp-header">
                            <span class="exp-role">{exp.role}</span>
                            <span class="date-badge">{exp.date}</span>
                        </div>
                        <div class="exp-company">{exp.company}</div>
                        <ul class="exp-details">
                            {(exp.details || []).map(d => <li>{d}</li>)}
                        </ul>
                    </div>
                ))}
            </section>

            <!-- Education -->
            <section>
                <div class="main-section-title">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path d="M12 14l9-5-9-5-9 5 9 5z" /><path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z" /><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222" /></svg>
                    Formations
                </div>
                <div class="edu-grid">
                    {education.map(edu => (
                        <div class="edu-card">
                            <div class="exp-header">
                                <span class="edu-degree">{edu.degree}</span>
                                <span class="date-badge">{edu.date}</span>
                            </div>
                            <div class="edu-school">{edu.school}</div>
                            {edu.details && (
                                <div class="edu-details">
                                    {edu.details.join(' ‚Ä¢ ')}
                                </div>
                            )}
                        </div>
                    ))}
                </div>
            </section>

            <!-- Interests -->
            <section style="margin-top: auto;">
                <div class="main-section-title">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14.828 14.828a4 4 0 01-5.656 0M9 10h.01M15 10h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
                    Projets & Passions
                </div>
                <div class="interest-grid">
                    {interests.map(i => (
                        <div class="interest-item">
                            <span class="interest-icon-box" set:html={interestIcons[i.icon] || i.icon}></span>
                            <span>{i.text}</span>
                        </div>
                    ))}
                </div>
            </section>

        </main>
    </div>
</body>
</html>
